{% from "components/GridSlider/GridSlider.njk" import GridSlider %}
{% from "components/RowSlider/RowSlider.njk" import RowSlider %}
{% from "components/StateWidget/StateWidget.njk" import StateWidget %}

{% macro PageContent(bem, data, a11y) %}

<main class="PageContent">
  <div class="PageContent-MainRow">
    <section class="PageContent-Main" aria-label="главное">
      <h2 class="PageContent-MainTitle">Главное</h2>
      {{ StateWidget({mix: 'PageContent-StateWidget'}, data.stateWidget) }}
    </section>
    {{GridSlider(
      {mix: 'PageContent-GridSlider'},
      data.GridSlider,
      { main: "избранные сценарии"}
    )}}
  </div>
  {{RowSlider(
    {mix: 'PageContent-RowSlider'},
    data.panelsRow,
    {
      main: "избранные устройства",
      itemList: "список устройств"
    }
  )}}

</main>

{% endmacro %}