{% macro Menu(bem, data) %}

<nav class="Menu {{bem.mix}} {{bem.mod}}" role="{{ data.role }}">
  <ul class="Menu-ListItem">

    {% for item in data.items %}

      {% if item.isActive %}
        {% set state = "Menu-Item_state_active" %}
      {% else %}
        {% set state = '' %}
      {% endif %}

      <li class="Menu-Item {{state}}">
        <a href="#">{{ item.title }}</a>
      </li>
    {% endfor %}

  </ul>
</nav>

{% endmacro %}