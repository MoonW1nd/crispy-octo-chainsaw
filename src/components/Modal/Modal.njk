{% from "components/Button/Button.njk" import Button %}

{% macro Modal(bem, data) %}

  <div class="Modal {{bem.mix}} {{bem.mod}}" tabindex="-1" aria-hidden="true" role="dialog">
    <section class="Modal-Form">

      <div class="Modal-Content">
        <header class="Modal-Header">
          <h2 class="Modal-Title">Elgato Eve Degree Connected</h2>

          <div class="Modal-IconWrapper">
            <p class="Modal-Value"></p>
            <img class="Modal-Icon" src="../assets/icon_sun_active.svg" alt="">
          </div>
          <p class="Modal-Description">Включено</p>
        </header>
        <div class="Modal-Controller">
        </div>
      </div>

      <div class="Modal-ButtonBlock">
        {{ Button({mix: "Modal-Button"}, { content: "Применить", type: "confirm" })}}
        {{ Button({mix: "Modal-Button"}, { content: "Закрыть" })}}
      </div>

    </section>
  </div>

{% endmacro %}