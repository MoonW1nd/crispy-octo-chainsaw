{% from "components/Button/Button.njk" import Button %}
{% from "components/RangeController/RangeController.njk" import RangeController %}
{% from "components/RotationalController/RotationalController.njk" import RotationalController %}

{% macro Modal(bem, data) %}

  <div class="Modal {{bem.mix}} {{bem.mod}} Modal_hidden" tabindex="-1" aria-hidden="true" role="dialog">
    <section class="Modal-Form">

      <div class="Modal-Content">
        <header class="Modal-Header">
          <h2 class="Modal-Title"><b>Elgato Eve Degree Connected</b></h2>

          <div class="Modal-IconWrapper">
            <p class="Modal-Value"><b>+15</b></p>
            <img class="Modal-Icon" src="../assets/icon_sun_active.svg" alt="">
          </div>
          <p class="Modal-Description">Включено</p>
        </header>
        <div class="Modal-Controller">
          {{RangeController({}, data.controllers.temperature)}}
          {# {{ RotationalController({}, {}) }} #}
        </div>
      </div>

      <div class="Modal-ButtonBlock">
        {{ Button({mix: "Modal-Button"}, { content: "Применить", type: "confirm" })}}
        {{ Button({mix: "Modal-Button"}, { content: "Закрыть" })}}
      </div>

    </section>
  </div>

{% endmacro %}